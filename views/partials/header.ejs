<!-- Logout Confirmation Modal -->
<div id="logoutModal" class="logout-modal" style="display: none;">
    <div class="logout-modal-content">
        <div class="logout-modal-header">
            <h3>Confirm Logout</h3>
            <i class="fas fa-sign-out-alt logout-icon"></i>
        </div>
        <div class="logout-modal-body">
            <p>Are you sure you want to log out of your account?</p>
            <p class="logout-warning">You will need to log in again to access your dashboard.</p>
        </div>
        <div class="logout-modal-footer">
            <button type="button" class="btn btn-outline" onclick="hideLogoutModal()">
                <i class="fas fa-times"></i> No, Stay Logged In
            </button>
            <button type="button" class="btn btn-danger" onclick="confirmLogout()">
                <i class="fas fa-sign-out-alt"></i> Yes, Log Out
            </button>
        </div>
    </div>
</div>

<style>
.logout-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(5px);
    animation: fadeIn 0.3s ease;
}

.logout-modal-content {
    background: white;
    border-radius: 1rem;
    width: 90%;
    max-width: 450px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    animation: slideIn 0.3s ease;
    overflow: hidden;
}

.logout-modal-header {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
    padding: 1.5rem;
    text-align: center;
    position: relative;
}

.logout-modal-header h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
}

.logout-icon {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    font-size: 1.5rem;
    opacity: 0.8;
}

.logout-modal-body {
    padding: 2rem;
    text-align: center;
}

.logout-modal-body p {
    margin: 0 0 1rem 0;
    color: #374151;
    font-size: 1rem;
    line-height: 1.5;
}

.logout-warning {
    font-size: 0.875rem;
    color: #6b7280;
    font-style: italic;
}

.logout-modal-footer {
    padding: 1.5rem;
    background: #f9fafb;
    display: flex;
    gap: 1rem;
    justify-content: center;
}

.logout-modal-footer .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    min-width: 140px;
    justify-content: center;
}

.logout-modal-footer .btn-outline {
    background: white;
    color: #374151;
    border: 2px solid #d1d5db;
}

.logout-modal-footer .btn-outline:hover {
    background: #f3f4f6;
    border-color: #9ca3af;
    transform: translateY(-1px);
}

.logout-modal-footer .btn-danger {
    background: #ef4444;
    color: white;
    border: 2px solid #ef4444;
}

.logout-modal-footer .btn-danger:hover {
    background: #dc2626;
    border-color: #dc2626;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes slideIn {
    from { 
        opacity: 0; 
        transform: translateY(-20px) scale(0.95); 
    }
    to { 
        opacity: 1; 
        transform: translateY(0) scale(1); 
    }
}

@media (max-width: 480px) {
    .logout-modal-footer {
        flex-direction: column;
    }
    
    .logout-modal-footer .btn {
        width: 100%;
    }
}
</style>

<script>
function showLogoutModal(event) {
    event.preventDefault();
    document.getElementById('logoutModal').style.display = 'flex';
}

function hideLogoutModal() {
    document.getElementById('logoutModal').style.display = 'none';
}

function confirmLogout() {
    window.location.href = '/logout';
}

// Close modal when clicking outside
document.addEventListener('click', function(e) {
    const modal = document.getElementById('logoutModal');
    if (e.target === modal) {
        hideLogoutModal();
    }
});

// Close modal with Escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        hideLogoutModal();
    }
});
</script>

